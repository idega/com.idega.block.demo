<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
    <pomVersion>3</pomVersion>
    <organization>
        <name>idega software</name>
        <url>http://www.idega.com</url>
        <logo>http://developer.idega.com/idega_onwhite_120.gif</logo>
    </organization>
    <inceptionYear>2000</inceptionYear>
    <groupId>bundles</groupId>
	<package>${pom.artifactId}</package>
    <repository>
        <connection>scm:cvs:ext:${cvs.username}@einstein.idega.is:/idega/cvs:${pom.groupId}/${pom.artifactId}.bundle/</connection>
        <developerConnection>scm:cvs:ext:${cvs.username}@einstein.idega.is:/idega/cvs:${pom.groupId}/${pom.artifactId}.bundle/</developerConnection>
    </repository>

  <url>http://developer.idega.com/${pom.groupId}/${pom.artifactId}/</url>
  <issueTrackingUrl>http://issues.idega.is/</issueTrackingUrl>
  <siteAddress>developer.idega.com</siteAddress>
  <siteDirectory>/var/www/webs/developer.idega.com/${pom.groupId}/${pom.artifactId}/</siteDirectory>

    <build>
		<nagEmailAddress>tryggvi@idega.com</nagEmailAddress>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
	    <resources>
	      <resource>
	       <directory>${basedir}/resources</directory>
	       <targetPath>resources</targetPath>
	        <includes>
	          <include>**/**</include>
	        </includes>
	      </resource>
	      <resource>
	       <directory>${basedir}/properties</directory>
	       <targetPath>properties</targetPath>
	        <includes>
	          <include>**/**</include>
	        </includes>
	      </resource>
	      <resource>
	       <directory>${basedir}/WEB-INF</directory>
	       <targetPath>WEB-INF</targetPath>
	        <includes>
	          <include>**/**</include>
	        </includes>
	      </resource>
	      <resource>
	       <directory>${basedir}/jsp</directory>
	       <targetPath>jsp</targetPath>
	        <includes>
	          <include>**/**</include>
	        </includes>
	      </resource>
	      <resource>
	       <directory>${basedir}/WEB-INF/tld</directory>
	       <targetPath>META-INF</targetPath>
	        <includes>
	          <include>**/*.tld</include>
	        </includes>
	      </resource>
	      <resource>
	       <directory>${basedir}/WEB-INF</directory>
	       <targetPath>META-INF</targetPath>
	        <includes>
	          <include>faces-config.xml</include>
	        </includes>
	      </resource>
	    </resources>
    </build>
  <dependencies>
	<!--This is only needed for the statcvs report -->
	<dependency>
	  <groupId>statcvs</groupId>
	  <artifactId>maven-statcvs-plugin</artifactId>
	  <version>2.5</version>
	  <type>plugin</type>
	</dependency>
  </dependencies>
  
  <reports>
    <report>maven-tasklist-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-changelog-plugin</report>
    <report>maven-developer-activity-plugin</report>
    <report>maven-simian-plugin</report>
    <report>maven-faq-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-license-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-jxr-plugin</report>
    <report>maven-statcvs-plugin</report>
  </reports>
</project>
